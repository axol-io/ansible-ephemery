# Ephemery Load Balancer Configuration - NGINX
# Generated by Ansible

# Upstream servers for execution layer (HTTP RPC)
upstream ephemery_execution {
{% for node in backend_nodes %}
    server {{ hostvars[node].ansible_host }}:8545 max_fails=3 fail_timeout=30s;
{% endfor %}
}

# Upstream servers for execution layer (WebSocket)
upstream ephemery_execution_ws {
{% for node in backend_nodes %}
    server {{ hostvars[node].ansible_host }}:8546 max_fails=3 fail_timeout=30s;
{% endfor %}
}

# Upstream servers for consensus layer
upstream ephemery_consensus {
{% for node in backend_nodes %}
    server {{ hostvars[node].ansible_host }}:5052 max_fails=3 fail_timeout=30s;
{% endfor %}
}

# HTTP RPC Server
server {
    listen {{ lb_http_port | default(8545) }};
    listen [::]:{{ lb_http_port | default(8545) }};
    
    access_log /var/log/nginx/ephemery_http_access.log;
    error_log /var/log/nginx/ephemery_http_error.log;
    
    location / {
        proxy_pass http://ephemery_execution;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_read_timeout 180s;
        proxy_connect_timeout 10s;
        
        # Add CORS headers
        add_header 'Access-Control-Allow-Origin' '*' always;
        add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS' always;
        add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range' always;
        add_header 'Access-Control-Expose-Headers' 'Content-Length,Content-Range' always;
        
        # Handle pre-flight requests
        if ($request_method = 'OPTIONS') {
            add_header 'Access-Control-Allow-Origin' '*';
            add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS';
            add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range';
            add_header 'Access-Control-Max-Age' 1728000;
            add_header 'Content-Type' 'text/plain; charset=utf-8';
            add_header 'Content-Length' 0;
            return 204;
        }
    }
}

# WebSocket Server
server {
    listen {{ lb_ws_port | default(8546) }};
    listen [::]:{{ lb_ws_port | default(8546) }};
    
    access_log /var/log/nginx/ephemery_ws_access.log;
    error_log /var/log/nginx/ephemery_ws_error.log;
    
    location / {
        proxy_pass http://ephemery_execution_ws;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_read_timeout 86400s; # Longer timeout for WebSockets
        proxy_buffering off;
    }
}

# Consensus Layer API
server {
    listen {{ lb_consensus_port | default(5052) }};
    listen [::]:{{ lb_consensus_port | default(5052) }};
    
    access_log /var/log/nginx/ephemery_consensus_access.log;
    error_log /var/log/nginx/ephemery_consensus_error.log;
    
    location / {
        proxy_pass http://ephemery_consensus;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_read_timeout 180s;
        
        # Add CORS headers
        add_header 'Access-Control-Allow-Origin' '*' always;
        add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS' always;
        add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range' always;
        add_header 'Access-Control-Expose-Headers' 'Content-Length,Content-Range' always;
        
        # Handle pre-flight requests
        if ($request_method = 'OPTIONS') {
            add_header 'Access-Control-Allow-Origin' '*';
            add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS';
            add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range';
            add_header 'Access-Control-Max-Age' 1728000;
            add_header 'Content-Type' 'text/plain; charset=utf-8';
            add_header 'Content-Length' 0;
            return 204;
        }
    }
} 
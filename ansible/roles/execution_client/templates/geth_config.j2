[Eth]
NetworkId = {{ el_network_id }}
SyncMode = "{{ el_syncmode }}"
NoPruning = false
NoPrefetch = false
LightPeers = 100
UltraLightFraction = 75
DatabaseCache = {{ geth_cache }}
DatabaseFreezer = ""
TrieCleanCache = 256
TrieDirtyCache = 256
TrieTimeout = 100000000000
SnapshotCache = 256
Preimages = false

[Eth.Miner]
GasFloor = 8000000
GasCeil = 8000000
GasPrice = 1000000000
Recommit = 3s

[Eth.TxPool]
Locals = []
NoLocals = false
Journal = "transactions.rlp"
Rejournal = 3600000000000
PriceLimit = 1
PriceBump = 10
AccountSlots = 16
GlobalSlots = 4096
AccountQueue = 64
GlobalQueue = 1024
Lifetime = 10800000000000

[Eth.GPO]
Blocks = 20
Percentile = 60
MaxHeaderHistory = 1024
MaxBlockHistory = 1024
MaxPrice = 500000000000
IgnorePrice = 2

[Node]
DataDir = "{{ geth_data_dir }}"
IPCPath = "geth.ipc"
HTTPHost = "0.0.0.0"
HTTPPort = {{ el_http_port }}
HTTPVirtualHosts = ["*"]
HTTPModules = ["{{ el_http_api | replace(',', '","') }}"]
WSHost = "0.0.0.0"
WSPort = {{ el_ws_port }}
WSOrigins = ["*"]
WSModules = ["{{ el_http_api | replace(',', '","') }}"]
GraphQLVirtualHosts = ["localhost"]

[Node.P2P]
MaxPeers = 50
NoDiscovery = false
BootstrapNodes = []
BootstrapNodesV5 = []
StaticNodes = []
TrustedNodes = []
ListenAddr = "0.0.0.0:{{ el_p2p_port }}"
EnableMsgEvents = false

[Node.HTTPTimeouts]
ReadTimeout = 30000000000
WriteTimeout = 30000000000
IdleTimeout = 120000000000

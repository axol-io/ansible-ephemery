---
exclude_paths:
  - collections/
  - .git/
  - molecule/
  - .github/
  - .vscode/
  - ansible/playbooks/validator.yaml
  - ansible/playbooks/firewall_setup.yaml
  - ansible/playbooks/fix_checkpoint_sync.yaml

skip_list:
  - yaml[line-length]
  - yaml[truthy]
  - var-naming[no-role-prefix]
  - name[casing]
  - name[template]
  - jinja[spacing]
  - schema[tasks]
  - no-handler
  - no-changed-when
  - no-relative-paths

warn_list:
  - experimental
  - unnamed-task

use_default_rules: true
parseable: true

offline: false
verbosity: 1

# Directories to exclude from secrets scanning
collections/ansible_collections/
.github/workflows/

# Collections directory can have a lot of false positives
collections/
ansible_collections/
collections/ansible_collections/community/general/

# Common patterns that are not real secrets - one regex per line
password: password
password: pa
password: '\{\{ credentials\.password \}\}'
token: invalidtoken
token: "invalidtoken!!!"
admin_password: password
key_value
key: user
key: foo
grant_type: "password"
filename: key 
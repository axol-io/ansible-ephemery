---
# Example inventory file for Ephemery nodes
# Rename to inventory.yaml and adjust to your environment

# Group nodes by client combinations
ephemery:
  children:
    # Group by execution and consensus client combinations
    geth_lighthouse:
      hosts:
        ephemery-node1:
          ansible_host: 192.168.1.101
          el: "geth"
          cl: "lighthouse"
          validator_enabled: false

    nethermind_teku:
      hosts:
        ephemery-node2:
          ansible_host: 192.168.1.102
          el: "nethermind"
          cl: "teku"
          validator_enabled: false

    besu_prysm:
      hosts:
        ephemery-node3:
          ansible_host: 192.168.1.103
          el: "besu"
          cl: "prysm"
          validator_enabled: false

    reth_lodestar:
      hosts:
        ephemery-node4:
          ansible_host: 192.168.1.104
          el: "reth"
          cl: "lodestar"
          validator_enabled: true

# Group nodes by role
validators:
  hosts:
    ephemery-node4:  # This node runs a validator

monitoring:
  hosts:
    ephemery-monitor:
      ansible_host: 192.168.1.200
      monitoring_enabled: true
      prometheus_enabled: true
      grafana_enabled: true

# Set global variables
all:
  vars:
    ansible_user: ubuntu
    ansible_become: true
    ansible_ssh_common_args: "-o StrictHostKeyChecking=no"
    network: "ephemery"

    # Global feature flags
    backup_enabled: true
    firewall_enabled: true

  # Define children groups
  children:
    ephemery:
      vars:
        ephemery_network: true
        docker_installed: true
